<h1>Burgers!</h1>

<h2>Burgers that are ready to eat!</h2>

<ul>
	{{#each burgers}}
		{{#unless devoured}}
			<li>{{burger_name}}
				<button class="eat-burger" data-id="{{this.id}}">EAT!</button>
			</li>
		{{/unless}}
	{{/each}}
</ul>

<h2>Burgers that have been eaten!</h2>

<ul>
  	{{#each burgers}}
    	{{#if devoured}}
      		{{burger_name}}
    	{{/if}}
  	{{/each}}
</ul>

