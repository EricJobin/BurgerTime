<h1>Burgers!</h1>

<div>
	<div class="uneaten">
		<h2>Burgers that are ready to eat!</h2>

		<ul>
			{{#each burgers}}
				{{#unless devoured}}
					<li>{{burger_name}}
						<button class="eat-burger" data-id="{{this.id}}">EAT!</button>
					</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>
	<div class="eaten">
		<h2>Burgers that have been eaten!</h2>

		<ul>
			{{#each burgers}}
				{{#if devoured}}
					<li>{{burger_name}}</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>
